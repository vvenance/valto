            <%= link_to invoice_datum_path(id: @invoice_data.id), class: "btn btn-primary" do %>Voir les donn√©es de facturation client<% end %>
          <% end %>
        </div>
      </div>
      <div class="stat">
        <%= link_to estimate_index_path(id: c.id) do %>
          <div class="stat-content">
            <h3>Devis</h3>
            <p>devis</p>
          </div>
        <% end %>
      </div>
      <div class="stat">
        <%= link_to contract_index_path(id: c.id) do %>
          <div class="stat-content">
            <h3>Contrats</h3>
            <p>contrats</p>
          </div>
        <% end %>
      </div>
      <div class="stat">
        <%= link_to invoice_index_path(id: c.id) do %>
